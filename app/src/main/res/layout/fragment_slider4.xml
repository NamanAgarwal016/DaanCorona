<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4b4c78">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/is7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Payment Modes"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="350dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/bank1"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="350dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/upi"/>


            </LinearLayout>


            <TextView
                android:id="@+id/is8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="The amount donated act as a voucher for the donor for him to redeem the amount in the future."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/is9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_marginTop="30dp"
                android:text="Decide how you want to receive payments - UPI or Bank Account."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>